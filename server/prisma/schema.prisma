generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Purpose {
  LOSE
  GAIN
  MAINTAIN
}

enum Gender {
  MALE
  FEMALE
}

model User {
  id        String   @id @default(cuid())
  firstName String
  lastName  String
  email     String   @unique
  password  String
  age       Int?
  weight    Float?
  height    Float?
  purpose   Purpose?
  gender    Gender?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

