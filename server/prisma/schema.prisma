generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Purpose {
  LOSE
  GAIN
  MAINTAIN
}

model User {
  id        String   @id @default(cuid())
  firstName String
  lastName  String
  email     String   @unique
  password  String
  age       Int?
  weight    Float?
  height    Float?
  purpose   Purpose?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
